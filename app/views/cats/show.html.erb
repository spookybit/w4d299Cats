<h1>CAT</h1>
<table>
  <colgroup>
    <col style="background-color: #0f0">
    <col style="background-color: #0f0">
    <col style="background-color: #0f0">
    <col style="background-color: #0f0">
    <col style="background-color: #0f0">
  </colgroup>
  <tr>
    <th>Name</th>
    <th>Birthdate</th>
    <th>Color</th>
    <th>Sex</th>
    <th>Description</th>
  </tr>
  <tr>
    <td><%= @cat.name%></td>
    <td><%= @cat.birthdate%></td>
    <td><%= @cat.color%></td>
    <td><%= @cat.sex%></td>
    <td><%= @cat.description%></td>
  </tr>

</table>
<table>
  <tr>
    <th>start_date</th>
    <th>end_date</th>
  </tr>

    <% @cat.cat_rental_requests.each do |request| %>
    <tr>
    <td><%= request.start_date %></td>
    <td><%= request.end_date%> </td>
    <% end %>
  </tr>
</table>
